<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Цвета компонентов -->
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="backgroundTint">@color/surface_color</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
