<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        item>
        <item name="android:background">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimary">@color/button_background</item>
        <item name="colorPrimaryVariant">@color/button_background_secondary</item>
        <item name="colorOnPrimary">@color/button_text</item>
        <item name="colorSecondary">@color/button_background_secondary</item>
        <item name="colorOnSecondary">@color/button_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Material Design 3 attributes -->
        <item name="colorPrimaryContainer">@color/list_item_background</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/list_item_text</item>
        <item name="colorSecondaryContainer">@color/notification_background</item>
        <item name="colorOnSecondaryContainer">@color/notification_text</item>
        <item name="colorSurfaceVariant">@color/surface_color</item>
        <item name="colorOnSurfaceVariant">@color/secondary_text</item>
        <item name="buttonBarButtonStyle">@style/DialogButton</item>

        <!-- Switch colors -->
        <item name="colorControlActivated">@color/switch_thumb_on</item>
        <item name="android:colorForeground">@color/gray</item>
    </style>


    <style name="viewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:alpha">0.25</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppHead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/headline_text</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/list_item_text</item>
    </style>


    <style name="AppButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
