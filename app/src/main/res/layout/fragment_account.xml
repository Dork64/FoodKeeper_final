<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Заголовок -->

        <!-- Иконка пользователя -->
        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Аккаунт"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:layout_marginBottom="16dp"
            app:tint="@color/black" />

        <!-- Подзаголовок -->
        <TextView
            android:id="@+id/userDataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="данные пользователя"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка изменения имени -->
        <Button
            android:id="@+id/changeNameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить имя"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка изменения почты -->
        <Button
            android:id="@+id/changeEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить адрес электронной почты"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка изменения пароля -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить пароль"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка выхода -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка удаления аккаунта -->
        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="удалить аккаунт"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/red"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
